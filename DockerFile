# Dockerfile
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ["DrzewaAPI.csproj", "."]
RUN dotnet restore "./DrzewaAPI.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "DrzewaAPI.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "DrzewaAPI.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Create logs directory
RUN mkdir -p /app/logs

# Create uploads directory
RUN mkdir -p /app/wwwroot/uploads

ENTRYPOINT ["dotnet", "DrzewaAPI.dll"]